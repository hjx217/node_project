<body class="login-bg">
<p class="center">登录用户名为：admin，密码为123456</p>
    <div class="login layui-anim layui-anim-up">
        <div class="message">后台管理员——登录</div>
        <div id="darkbannerwrap"></div>
        
        <form method="POST" class="layui-form" >
            <input name="username" placeholder="用户名"  type="text" lay-verify="required" class="layui-input" >
            <hr class="hr15">
            <input name="password" lay-verify="required" placeholder="密码"  type="password" class="layui-input">
            <hr class="hr15">
            <!-- <input  style="background:#0dc316;" lay-submit lay-filter="login" style="width:100%;" type="submit"> -->
            <a href="indexAdmin">登录</a>
            <hr class="hr20" >
        </form>
    </div>
    <script>
        let username = document.getElementsByName('username')[0].values;
        let password = document.getElementsByName('password')[0].values;
        document.getElementById('login').onclick = function(){
            if(username == admin && password == 123456){
                window.location.href = 'indexAdmin.ejs'
            }else if(username == "" || password == ""){
                alert("用户名或密码不能为空")
            }else{
                alert("用户名或密码错误")
            }
        }
    </script>
