                <div class="layui-input-inline">
                    <input type="text" id="L_repass" name="title" required lay-verify="required"
                    autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item">
                <label for="L_repass" class="layui-form-label">
                    <span class="x-red"></span>新价格
                </label>
                <div class="layui-input-inline">
                    <input type="text" id="L_repass" name="newprice" required lay-verify="required"
                    autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item">
                <label for="L_repass" class="layui-form-label">
                    <span class="x-red"></span>旧价格
                </label>
                <div class="layui-input-inline">
                    <input type="text" id="L_repass" name="oldprice" required lay-verify="required"
                    autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item">
                <label for="L_repass" class="layui-form-label">
                </label>
                <input type="submit">
            </div>
