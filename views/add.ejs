  <body>
    <div class="x-body">
        <form class="layui-form" action="/product-list/add" method="POST">
            <div class="layui-form-item">
                <label for="L_repass" class="layui-form-label">
                    <span class="x-red"></span>图片路径
                </label>
                <div class="layui-input-inline">
                    <input type="text" id="L_repass" name="image" required lay-verify="required"
